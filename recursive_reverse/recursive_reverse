'''RECURSIVE REVERSE'''

class Node:
    '''Node class'''
    def __init__(self, data=None):
        self.data = data
        self.next = None

def reverse(head):
    '''reverse linked list
    2 -> 1 -> 3 -> 6 -> 5 -> null
    5 -> 6 -> 3 -> 1 -> 2 -> null'''
    def additional(head):
        if head is None or head.next is None:
            return head

        new_head = additional(head.next)
        head.next.next = head
        head.next = None

        return new_head

    return additional(head)
